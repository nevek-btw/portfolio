---
import Skill from "./Skill.astro";
import HtmlIcon from "../../icons/HtmlIcon.astro";
import CssIcon from "../../icons/CssIcon.astro";
import ReactIcon from "../../icons/ReactIcon.astro";
import JavaScriptIcon from "../../icons/JavaScriptIcon.astro";
import TypeScriptIcon from "../../icons/TypeScriptIcon.astro";
import MongoDbIcon from "../../icons/MongoDbIcon.astro";
import NextjsIcon from "../../icons/NextjsIcon.astro";
import Tailwind from "../../icons/Tailwind.astro";
import AstroIcon from "../../icons/AstroIcon.astro";
import RustLangIcon from "../../icons/RustLangIcon.astro";
import PythonIcon from "../../icons/PythonIcon.astro";
import GitIcon from "../../icons/GitIcon.astro";
---

<section id="skills" class="py-24 max-[800px]:pt-5">
    <h3
        class="text-2xl font-semibold tracking-tight mb-3 pb-4 dark:text-purple-100/90 text-black/80"
    >
        Habilidades
    </h3>
    <div class="max-w-[380px] mx-auto">
        <div class="grid grid-cols-4 space-x-2 justify-center items-center">
            <Skill title="Html">
                <HtmlIcon />
            </Skill>

            <Skill title="CSS">
                <CssIcon />
            </Skill>
            <Skill title="Astro">
                <AstroIcon />
            </Skill>
            <Skill title="Next js">
                <NextjsIcon />
            </Skill>
            <Skill title="React js">
                <ReactIcon />
            </Skill>
            <Skill title="JavaScript">
                <JavaScriptIcon />
            </Skill>
            <Skill title="TypeScript">
                <TypeScriptIcon />
            </Skill>
            <Skill title="Rust Lang">
                <RustLangIcon />
            </Skill>
            <Skill title="Python">
                <PythonIcon />
            </Skill>
            <Skill title="Tailwidcss">
                <Tailwind />
            </Skill>
            <Skill title="Git">
                <GitIcon />
            </Skill>
            <Skill title="MongoDb">
                <MongoDbIcon />
            </Skill>
        </div>
    </div>
</section>
